{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@castellum/shared": ["../shared/src/index.ts"],
      "@castellum/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"]
}
